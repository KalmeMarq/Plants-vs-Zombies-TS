{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./public/",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
